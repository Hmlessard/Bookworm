<form class="new-post-form">

    <h2>Post Info</h2>

    {{#if existingBook}}

     <div>
      <label for="book-title">Title:</label>
      <input type="text" id="book-title" name="book-title" value="{{book.book_title}}"readonly/>
    </div>

    <div>
        <label for="book-author">Author:</label>
        <input type="text" id="book-author" name="book-author" value="{{book.book_author}}" readonly/>
    </div>

    {{else}}

    <div>
      <label for="book-title">Title:</label>
      <input type="text" id="book-title" name="book-title"/>
    </div>

    <div>
        <label for="book-author">Author:</label>
        <input type="text" id="book-author" name="book-author"/>
    </div>

    {{/if}}

    <div>
        <label for="book-review">Book Review:</label>
        <input type="text" id="book-review" name="book-review"/>
    </div>

    <button type="submit" class="btn">Create Post</button>
    
</form>

<script src="/javascript/add-post.js"></script>